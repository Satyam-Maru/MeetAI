{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "npm start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "services": {
    "web": {
      "name": "meetai-app",
      "rootDir": "./server",
      "startCommand": "npm start"
    },
    "worker": {
      "name": "livekit-agent",
      "rootDir": "./server",
      "startCommand": "npm run start:agent"
    }
  }
}
